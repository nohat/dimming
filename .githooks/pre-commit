#!/bin/bash

# Pre-commit hook to validate MkDocs documentation
echo "ğŸ” Checking MkDocs documentation..."

# Check if we're in the right directory
if [ ! -f "mkdocs.yml" ]; then
    echo "âŒ mkdocs.yml not found. Are you in the project root?"
    exit 1
fi

# Run MkDocs build with strict mode
if ! mkdocs build --strict --quiet --site-dir /tmp/mkdocs-check; then
    echo "âŒ MkDocs build failed! Please fix documentation errors before committing."
    echo "ğŸ’¡ Run 'mkdocs build --strict' to see detailed error messages."
    exit 1
fi

# Clean up temporary build
rm -rf /tmp/mkdocs-check

echo "âœ… MkDocs documentation is valid!"
exit 0
